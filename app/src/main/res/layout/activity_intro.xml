<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_button"
            android:id="@+id/login_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="153dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/facebook_connect"
            android:id="@+id/facebook_connect_button"
            android:layout_marginTop="49dp"
            android:layout_alignTop="@+id/login_button"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/fullcountlogotmp"
            android:layout_above="@+id/facebook_connect_button"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/not_a_member"
            android:id="@+id/textView"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/facebook_connect_button"
            android:layout_alignRight="@+id/login_button"
            android:layout_alignEnd="@+id/login_button"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sign_up"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:clickable="true" />

    </RelativeLayout>
</LinearLayout>